<div class="mt-5" style="display: flex; justify-content: space-around">
  <form action="/create" method="POST" class="row g-3">
    <div class="col-auto">
      <label class="visually-hidden">Name</label>
      <input
        type="text"
        class="form-control"
        placeholder="Name"
        name="name"
        required
      />
    </div>
    <div class="col-auto">
      <label class="visually-hidden">Age</label>
      <input
        min="7"
        type="number"
        class="form-control"
        placeholder="Age"
        name="age"
        required
      />
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-3">Add Student</button>
    </div>
  </form>
</div>
